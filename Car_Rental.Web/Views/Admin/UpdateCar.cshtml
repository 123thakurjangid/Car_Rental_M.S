@model Car_Rental.Business.Model.UpdateCarModel

<div class="row">
    <div class="column">

        <h2 id="UpdateCarhead" class="formH text-dark">Manage Car</h2>
        <hr class="Cutting_hr_right"/>

        <form class="CustomerForm" asp-action="UpdateCar" asp-controller="Admin" method="post">

            <label>Car Id</label><br />
            <input class="col-sm-9 " asp-for="Car_Id" readonly /><br />
            <span asp-validation-for="Car_Id"></span> <br />

            <label>Car Plate Number</label><br />
            <input class="col-sm-9 car_Updt_inp" asp-for="Plate_Number" /><br />
            <span class="text-danger" asp-validation-for="Plate_Number"></span> <br />

            <label>Brand</label><br />
            <input class="col-sm-9 " type="text" asp-for="Company" /><br />
            <span class="text-danger" asp-validation-for="Company"></span> <br />

            <label>Model</label><br />
            <input class="col-sm-9 " type="text" asp-for="Model" /> <br />
            <span class="text-danger" asp-validation-for="Model"></span> <br />

            <label>Price</label><br />
            <input class="col-sm-9 " type="text" asp-for="Price" /> <br />
            <span class="text-danger" asp-validation-for="Price"></span> <br />

            <label>Color</label><br />
            <input class="col-sm-9 " type="text" asp-for="Color" /> <br />
            <span class="text-danger" asp-validation-for="Color"></span> <br />

            <label>Available</label><br />
            <input class="col-sm-9 " type="text" asp-for="Available" /><br />
            <span class="text-danger" asp-validation-for="Available"></span> <br />

            <input class="col-sm-9 btn btn-outline-warning" type="submit" value="Update" />

        </form>
    </div>
    <div class="column">
        <img id="rightcolimg" src="~/AdminPanelCars/Mustang Gt.png" />
    </div>
</div>
