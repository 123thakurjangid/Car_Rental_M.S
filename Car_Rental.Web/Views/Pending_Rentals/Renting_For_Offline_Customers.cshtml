@model Car_Rental.Business.Model.Pending_RentalsModel

@*<h2 class="formH text-dark">Rental a Car</h2>*@
<div class="row">
    <div class="column">
        <h2 id="UpdateCarhead" class="formH text-dark">Rent a Car</h2>
        <hr class="Cutting_hr_right" />

            <form class="CustomerForm" asp-action="SaveRental_ForAdmin" asp-controller="Pending_Rentals" method="post">
            
                <label>Car Id</label><br />
                <input class="col-sm-9" asp-for="Car_Id" placeholder="Enter Plate Number" /><br />
                <span class="text-danger" asp-validation-for="Car_Id"></span><br />
            
                <label>Customer Name</label><br />
                <input class="col-sm-9" asp-for="Customer_Name" placeholder="Enter Plate Number" /><br />
                <span class="text-danger" asp-validation-for="Customer_Name"></span><br />

                <label>Customer Email Id</label><br />
                <input class="col-sm-9" asp-for="Customer_Email_Id" placeholder="Enter Plate Number" /><br />
                <span class="text-danger" asp-validation-for="Customer_Email_Id"></span><br />
            
                <label>Car Plate Number</label><br />
                <input class="col-sm-9" asp-for="Plate_Number" placeholder="Enter Plate Number" /><br />
                <span class="text-danger" asp-validation-for="Plate_Number"></span><br />
            
                <label>Model</label><br />
                <input class="col-sm-9" type="text" asp-for="Model" placeholder="Enter Model" /> <br />
                <span class="text-danger" asp-validation-for="Model"></span><br />
            
                <label>Price</label><br />
                <input class="col-sm-9" type="text" asp-for="Price" placeholder="Enter Price" /> <br />
                <span class="text-danger" asp-validation-for="Price"></span><br />

                <label>Rent Date</label><br />
                <input class="col-sm-9" type="datetime" asp-for="Rent_Date" placeholder="Enter Rent date" value="@DateTime.Now"/> <br />
                <span class="text-danger" asp-validation-for="Rent_Date"></span><br />

                <label>Return date</label><br />
                <input class="col-sm-9" type="datetime-local" asp-for="Return_Date" placeholder="Enter Price"/> <br />
                <span class="text-danger" asp-validation-for="Return_Date"></span><br />
            
                <input class="col-sm-9 btn btn-outline-warning" type="submit" value="Rent" />
            
            </form>
    </div>
          <div class="column">
              <img id="rightcolimg" src="~/AdminPanelCars/Mustang Gt.png" />
          </div>
</div>