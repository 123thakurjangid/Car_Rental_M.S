@model IEnumerable<Car_Rental.Business.Model.LoginModel>

<div class="row">
    <div class="column">
        <h2>Edit Customers</h2>
        <form class="CustomerForm">
            <label>Customer Name</label><br />
            <input class="col-sm-10" placeholder="Please Enter Name" /><br />
            <span class="text-danger"></span><br />

            <label>Customer Address</label><br />
            <input class="col-sm-10" type="text" placeholder="Please Enter Address" /><br />
            <span class="text-danger"></span><br />

            <label>Customer Phone</label><br />
            <input class="col-sm-10" type="text" placeholder="Please Enter Phone" /> <br />
            <span class="text-danger"></span><br />

            <label>Customer City</label><br />
            <input class="col-sm-10" type="text" placeholder="Please Enter City" /> <br />
            <span class="text-danger"></span><br />

            <input class="col-sm-10 btn btn-outline-warning" type="submit" value="Save" />
        </form>
    </div>
    <div class="column">
        <h3>Online Customers</h3>
        <table id="customertbl" class="table table-dark table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User_Password)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Where(item => item != null))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @*@if()*@
                        @Html.DisplayFor(modelItem => item.User_Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Password)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id})
                    </td>
                </tr>
            }
        </table>
    </div>

</div>
